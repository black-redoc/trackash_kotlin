<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ProfileActivity">

    <RelativeLayout
            android:id="@+id/header"
            android:background="@drawable/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="480dp">

        <LinearLayout
                android:id="@+id/imageLayout"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_color="@color/grayLight"
                    app:civ_border_width="5dp"
                    android:id="@+id/imageProfile"
                    android:src="@drawable/profileimg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
            <ImageView
                    android:src="@drawable/ic_edit"
                    android:layout_marginStart="-15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/usr"
                android:orientation="horizontal"
                android:layout_below="@+id/imageLayout"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/usrname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JoSebas Black"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"/>
            <TextView
                    android:background="@color/grayLight"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textStyle="bold"
                    android:text="DEV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>




        <LinearLayout
                android:id="@+id/carrer"
                android:layout_below="@+id/usr"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/occupation"
                    android:text="Software Developer | "
                    android:textSize="20sp"
                    android:textColor="@color/grayLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="20sp"
                    android:textColor="@color/grayLight"
                    android:text="Cali, VA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:src="@drawable/ic_edit"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_below="@+id/carrer"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="20sp"
                    android:textColor="@color/grayLight"
                    android:text="joseb.twelve@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:contentDescription="Home"
                android:id="@+id/toHome"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/footer"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/totalCash"
                        android:textColor="@color/startBlue"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:textSize="25sp"/>
                <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:text="Cash"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_marginStart="15dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txtIncomes"
                        android:textColor="@color/incomesColor"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:textSize="25sp"/>
                <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Incomes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_marginStart="15dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txtExpenses"
                        android:textColor="@color/expensesColor"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:textSize="25sp"/>
                <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Expenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>